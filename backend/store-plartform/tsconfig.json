{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",          // Required for "type": "module"
    "moduleResolution": "NodeNext", // Matches module setting
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}